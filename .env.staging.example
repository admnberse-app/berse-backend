# Staging Environment Configuration
# Mirror production settings but with staging resources

# Database Configuration
DATABASE_URL="postgresql://staging_user:staging_password@db.staging.com:5432/bersemuka_staging"
DATABASE_MAX_CONNECTIONS=30

# JWT Configuration
JWT_SECRET="STAGING_JWT_SECRET_MINIMUM_256_BITS"
JWT_REFRESH_SECRET="STAGING_REFRESH_SECRET_MINIMUM_256_BITS"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"
API_URL="https://api-staging.bersemuka.com"

# CORS Configuration
CORS_ORIGIN="https://staging.bersemuka.com,https://app-staging.bersemuka.com"

# Redis Configuration
REDIS_HOST="redis.staging.com"
REDIS_PORT=6379
REDIS_PASSWORD="REDIS_STAGING_PASSWORD"
REDIS_DB=0

# Cookie Configuration
COOKIE_SECRET="STAGING_COOKIE_SECRET"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="/app/uploads"

# Email Configuration (Use test email service)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="MAILTRAP_USER"
SMTP_PASS="MAILTRAP_PASSWORD"
FROM_EMAIL="staging@bersemuka.com"

# External API Keys (Use test/sandbox keys)
GOOGLE_MAPS_API_KEY="STAGING_GOOGLE_MAPS_API_KEY"
CLOUDINARY_CLOUD_NAME="STAGING_CLOUDINARY_CLOUD"
CLOUDINARY_API_KEY="STAGING_CLOUDINARY_KEY"
CLOUDINARY_API_SECRET="STAGING_CLOUDINARY_SECRET"

# Third Party Payment APIs (Use sandbox/test keys)
GOBARAQAH_API_KEY="SANDBOX_GOBARAQAH_KEY"
IBANTU_API_KEY="SANDBOX_IBANTU_KEY"
SETEL_API_KEY="SANDBOX_SETEL_KEY"
TOUCHNGO_API_KEY="SANDBOX_TOUCHNGO_KEY"
BILLPLZ_API_KEY="SANDBOX_BILLPLZ_KEY"
TOYYIBPAY_API_KEY="SANDBOX_TOYYIBPAY_KEY"

# Monitoring and Analytics
SENTRY_DSN="https://staging-sentry-dsn@sentry.io/staging-project"
GOOGLE_ANALYTICS_ID="GA-STAGING-ID"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_LOGIN_MAX=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# Feature Flags (Test new features)
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_OAUTH=true
ENABLE_MFA=true

# Webhook URLs
WEBHOOK_SECRET="STAGING_WEBHOOK_SECRET"
PAYMENT_WEBHOOK_URL="/api/webhooks/payment"

# Staging Settings
ENABLE_DEBUG_LOGS=true
MOCK_EXTERNAL_APIS=false

# Secrets Management
SECRETS_MASTER_KEY="STAGING_SECRETS_MASTER_KEY_HEX"