# Production Environment Configuration
# IMPORTANT: Replace all example values with real production values

# Database Configuration
DATABASE_URL="postgresql://prod_user:STRONG_PASSWORD@db.production.com:5432/bersemuka_prod"
DATABASE_MAX_CONNECTIONS=50

# JWT Configuration (Use strong, unique secrets)
JWT_SECRET="PRODUCTION_JWT_SECRET_MINIMUM_256_BITS_CHANGE_THIS"
JWT_REFRESH_SECRET="PRODUCTION_REFRESH_SECRET_MINIMUM_256_BITS_CHANGE_THIS"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"
API_URL="https://api.bersemuka.com"

# CORS Configuration
CORS_ORIGIN="https://bersemuka.com,https://app.bersemuka.com"

# Redis Configuration
REDIS_HOST="redis.production.com"
REDIS_PORT=6379
REDIS_PASSWORD="REDIS_PRODUCTION_PASSWORD"
REDIS_DB=0

# Cookie Configuration
COOKIE_SECRET="PRODUCTION_COOKIE_SECRET_CHANGE_THIS"

# File Upload Configuration
MAX_FILE_SIZE="5mb"
UPLOAD_DIR="/app/uploads"

# Digital Ocean Spaces Configuration (Production)
SPACES_ENDPOINT="https://sgp1.digitaloceanspaces.com"
SPACES_BUCKET="production-berse-app"
SPACES_REGION="sgp1"
SPACES_ACCESS_KEY_ID="PRODUCTION_SPACES_ACCESS_KEY"
SPACES_SECRET_ACCESS_KEY="PRODUCTION_SPACES_SECRET_KEY"
SPACES_CDN_ENDPOINT="https://production-berse-app.sgp1.cdn.digitaloceanspaces.com"

# Email Configuration
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="SENDGRID_API_KEY"
FROM_EMAIL="noreply@bersemuka.com"

# External API Keys
GOOGLE_MAPS_API_KEY="PRODUCTION_GOOGLE_MAPS_API_KEY"
CLOUDINARY_CLOUD_NAME="PRODUCTION_CLOUDINARY_CLOUD"
CLOUDINARY_API_KEY="PRODUCTION_CLOUDINARY_KEY"
CLOUDINARY_API_SECRET="PRODUCTION_CLOUDINARY_SECRET"

# Third Party Payment APIs
GOBARAQAH_API_KEY="PRODUCTION_GOBARAQAH_KEY"
IBANTU_API_KEY="PRODUCTION_IBANTU_KEY"
SETEL_API_KEY="PRODUCTION_SETEL_KEY"
TOUCHNGO_API_KEY="PRODUCTION_TOUCHNGO_KEY"
BILLPLZ_API_KEY="PRODUCTION_BILLPLZ_KEY"
TOYYIBPAY_API_KEY="PRODUCTION_TOYYIBPAY_KEY"

# Monitoring and Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
GOOGLE_ANALYTICS_ID="GA-PRODUCTION-ID"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_LOGIN_MAX=5

# Security Configuration
BCRYPT_ROUNDS=14
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCKOUT_MINUTES=60

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_OAUTH=true
ENABLE_MFA=true

# Webhook URLs
WEBHOOK_SECRET="PRODUCTION_WEBHOOK_SECRET"
PAYMENT_WEBHOOK_URL="/api/webhooks/payment"

# Production Settings
ENABLE_DEBUG_LOGS=false
MOCK_EXTERNAL_APIS=false

# Secrets Management
SECRETS_MASTER_KEY="PRODUCTION_SECRETS_MASTER_KEY_HEX"