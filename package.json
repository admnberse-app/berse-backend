{
  "name": "bersemuka-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.development.local -- nodemon --exec ts-node src/server.ts",
    "dev:local": "nodemon --exec ts-node src/server.ts",
    "build": "rimraf dist && tsc && npm run copy-files",
    "build:backend": "rimraf dist && tsc && npm run copy-files",
    "build:check": "tsc --noEmit",
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "railway:build": "npm run build && cd frontend && npm install && npm run build",
    "railway:start": "npx prisma generate && npx prisma migrate deploy && npm run start:prod",
    "railway:start:migrate": "npm run prisma:migrate:prod && npm run start:prod",
    "railway:seed": "ts-node prisma/seeds/index.ts",
    "start:cluster": "cross-env NODE_ENV=production CLUSTER_MODE=true node dist/server.js",
    "copy-files": "copyfiles -u 1 src/**/*.json dist/",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:seed:all": "ts-node prisma/seeds/index.ts",
    "prisma:seed:core": "ts-node prisma/seed.ts",
    "prisma:seed:badges": "ts-node prisma/seeds/core/badges.seed.ts",
    "prisma:seed:rewards": "ts-node prisma/seeds/core/rewards.seed.ts",
    "prisma:seed:users": "ts-node prisma/seeds/core/users.seed.ts",
    "prisma:seed:communities": "ts-node prisma/seeds/core/communities.seed.ts",
    "prisma:seed:events": "ts-node prisma/seeds/core/events.seed.ts",
    "prisma:seed:config": "ts-node prisma/seeds/config/seed-app-config.ts && ts-node prisma/seeds/config/seed-payment-providers.ts",
    "prisma:seed:onboarding": "ts-node prisma/seeds/features/onboarding-v2.seed.ts",
    "seed": "ts-node prisma/seeds/index.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "cd frontend && npm test -- --no-watch --passWithNoTests",
    "test:backend": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "test:email": "ts-node scripts/test-email.ts",
    "setup:email-logo": "bash scripts/setup-email-logo.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/csurf": "^1.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@yusifaliyevpro/countries": "^2.2.2",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "country-state-city": "^3.2.1",
    "cross-env": "^10.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.8",
    "prisma": "^6.13.0",
    "qrcode": "^1.5.4",
    "redis": "^5.7.0",
    "redoc-express": "^2.1.0",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.19.3",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xendit-node": "^7.0.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/socket.io": "^3.0.2",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/web-push": "^3.6.4",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/index.ts"
  }
}
